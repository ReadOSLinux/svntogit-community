# $Id$
# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=man-pages-de
pkgver=0.7
pkgrel=1
pkgdesc="German Linux man pages"
arch=('any')
url="https://alioth.debian.org/projects/manpages-de/"
license=('custom')
depends=('man-db')
changelog=$pkgname.changelog
options=('!emptydirs')
source=(https://alioth.debian.org/frs/download.php/3463/manpages-de-$pkgver.tar.bz2)
sha256sums=('f13ceee18657e2060debe1bd7af5adff9b84ee6436a8140cfbcf5f2ba6e72f14')

package() {
  cd ${srcdir}/manpages-de-$pkgver

  eval install -d ${pkgdir}/usr/share/man/de/man{$(seq -s, 1 8)}
  find man?/ -name '*.?' -exec iconv -f latin1 -t utf8 -o ${pkgdir}/usr/share/man/de/{} {} \;

  install -D -m644 COPYRIGHT ${pkgdir}/usr/share/licenses/$pkgname/COPYRIGHT
}
